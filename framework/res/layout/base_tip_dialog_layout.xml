<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@drawable/dialog_cornor_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px100"
        android:layout_marginRight="@dimen/px100"
        android:layout_marginTop="@dimen/px50"
        android:text="@string/kindly_tips"
        android:gravity="center_horizontal"
        android:textColor="@color/font_blue"
        android:textSize="@dimen/font_40px" />

    <View
        android:id="@+id/divide_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/px20"
        android:layout_marginLeft="@dimen/px48"
        android:layout_marginRight="@dimen/px48"
        android:background="@color/hor_divide_line" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px44"
        android:layout_marginRight="@dimen/px44">

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:layout_marginBottom="@dimen/px64"
            android:layout_marginTop="@dimen/px40"
            android:textSize="@dimen/font_26px" />

        <ListView
            android:id="@+id/list_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px48"
            android:layout_marginTop="@dimen/px24"
            android:divider="@null"
            android:dividerHeight="0px"
            android:listSelector="@android:color/transparent" />
    </FrameLayout>

    <TextView
        android:id="@+id/check_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px30"
        android:layout_marginLeft="@dimen/px28"
        android:drawablePadding="@dimen/px12"
        android:textColor="#999999"
        android:layout_gravity="left"
        android:paddingLeft="@dimen/px18"
        android:textSize="@dimen/font_24px"
        android:visibility="gone" />

    <TextView
        android:id="@+id/confirm_know"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/px20"
        android:paddingTop="@dimen/px20"
        android:layout_marginBottom="22dp"
        android:layout_marginLeft="@dimen/px44"
        android:layout_marginRight="@dimen/px44"
        android:background="@drawable/dialog_btn_bg"
        android:gravity="center"
        android:text="@string/i_know"
        android:textColor="#ffffff"
        android:textSize="@dimen/font_30px" />

</LinearLayout>

